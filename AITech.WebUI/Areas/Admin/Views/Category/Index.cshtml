@model List<ResultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int count=0;
}


<h1>Kategoriler</h1>

<table class="table table-hover table-bordered">
    <thead>
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            count++;
            <tr>
                <th>@count</th>
                <td>@item.Name</td>
                <td>
                    <a href="/Admin/Category/DeleteCategory/@item.Id" class="btn btn-danger">Sil</a>

                    <a href="/Admin/Category/UpdateCategory/@item.Id" class="btn btn-info">Güncelle</a>
                </td>
            </tr>
        }
    </tbody>
</table>
