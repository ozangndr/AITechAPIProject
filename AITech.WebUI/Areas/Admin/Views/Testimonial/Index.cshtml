@model List<ResultTestimonialDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Admin/Index.cshtml";
    int count = 0;
}


<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-6 text-primary">Özellikler Listesi</h1>

        <a href="/Admin/Testimonial/Create" class="btn btn-success btn-lg shadow-sm">
            <i class="fas fa-plus-circle"></i> Yeni Kategori Ekle
        </a>
    </div>

    <div class="card shadow-sm border-0">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="bg-primary text-white">
                    <tr>
                        <th style="width: 5%;">#</th>
                        <th style="width: 20%;">Resim</th>
                        <th style="width: 20%;">İsim</th>
                        <th style="width: 15%;">Ünvan</th>
                        <th style="width: 20%;">Yorum</th>
                        <th style="width: 20%;" class="text-center">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td><img src="@item.ImageUrl" alt="Özellik İkonu" style="width: 32px; height: 32px;" class="img-thumbnail" /></td>
                            <td>@item.Name</td>
                            <td>@item.Title</td>
                            <td>
                                @(item.Comment != null && item.Comment.Length > 50
                                                            ? item.Comment.Substring(0, 50) + "..."
                                                            : item.Comment)
                        </td>
                       
                        <td class="text-center">
                            <div class="btn-group" role="group">

                                    <a href="/Admin/Testimonial/Delete/@item.Id"
                                       class="btn btn-outline-danger btn-sm"
                                       onclick="return confirm('Bu Kaydı silmek istediğinizden emin misiniz?')"
                                       title="Sil">
                                        <i class="fas fa-trash-alt"></i> Sil
                                    </a>

                                    <a href="/Admin/Testimonial/Update/@item.Id"
                                       class="btn btn-outline-info btn-sm ml-2"
                                       title="Güncelle">
                                        <i class="fas fa-edit"></i> Güncelle
                                    </a>
                                </div>
                            </td>
                        </tr>
                                        }
                </tbody>
            </table>
        </div>
    </div>
</div>

