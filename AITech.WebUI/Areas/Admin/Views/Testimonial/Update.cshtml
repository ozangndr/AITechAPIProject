@model UpdateTestimonialDto
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Admin/Index.cshtml";
}

<h1>Referans Güncelle</h1>

<form method="post">
    <input type="hidden" asp-for="Id"/>
    <label>Ad Soyad</label>
    <input asp-for="Name" class="form-control" />
    <br />

    <label>Ünvan</label>
    <input asp-for="Title" class="form-control" />
    <br />

    <label>Açıklama</label>
    <textarea asp-for="Comment" class="form-control" rows="3"></textarea>
    <br />

    <div class="mb-4">
        <label asp-for="ImageUrl" class="form-label fw-bold">Görsel URL</label>
        <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Görselin URL adresini girin" />
        <span asp-validation-for="ImageUrl" class="text-danger"></span>
        @* Mevcut görseli göstermek için *@
        @if (!string.IsNullOrEmpty(Model.ImageUrl))
        {
            <div class="mt-2">
                <img src="@Model.ImageUrl" alt="Mevcut Görsel" class="img-thumbnail" style="max-width: 200px; height: auto;" />
                <small class="form-text text-muted d-block mt-1">Mevcut görsel önizlemesi.</small>
            </div>
        }
    </div>

    <button class="btn btn-primary">Kaydet</button>

</form>


